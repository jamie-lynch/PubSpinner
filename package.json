            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "2.x",
        "@typescript-eslint/parser": "2.x",
        "@lhci/cli": "^0.5.0",
        "autoprefixer": "^9.8.0",
