    "dependencies": {
        "@material-ui/core": "^4.9.14",
        "@material-ui/icons": "^4.9.1",
        "@material-ui/lab": "^4.0.0-alpha.54",
        "classnames": "^2.2.6",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "3.4.1",
        "uuid": "^8.1.0"
    },
    "scripts": {
        "start": "yarn watch:css && react-scripts start",
